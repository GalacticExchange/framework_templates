#!/bin/bash

AFTER_CREATE="/after-create"
FIRST_RUN="/etc/first_run.sh"

echo "Executing after create"

if [ -f "$AFTER_CREATE" ]
then
source "${AFTER_CREATE}"
rm "${AFTER_CREATE}"
fi

echo "Executing first run"

if [ -f "$FIRST_RUN" ]
then
source "${FIRST_RUN}"
rm "${FIRST_RUN}"
fi

set +x

while  [  -f /INIT_LOCK ];
do
sleep 0.1
done


set +e


source /etc/init.sh

while true
do
sleep 1000
done



