<%# elasticsearch:elasticsearch:0660 %>

cluster.name: <%= assert_nnil(@_cluster_name) %>
node.name: master-<%= assert_nnil(@_cluster_name ) %>
node.attr.rack: master

node.master: true
node.data: false
node.ingest: true
bootstrap.memory_lock: false

path.data: /data/elasticsearch
#
# Path to log files:
#
#path.logs: /path/to/logs
# Set the bind address to a specific IP (IPv4 or IPv6):
network.host: <%= assert_nnil(@_master_ip ) %>
# Set a custom port for HTTP:
#http.port: 9200
# The default list of hosts is ["127.0.0.1", "[::1]"]
discovery.zen.ping.unicast.hosts: [<%= assert_nnil(@_master_ip ) %>]
